<%= simple_form_for @user, url: user_index_path do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.input :name, required: true %>
  </div>
  <div class="field">
    <%= f.input :email, required: true %>
  </div>
  <br>
  <div class='field'>
    <%= f.label :role, required: true %>: <%= f.collection_select(:role_id, Role.all, :id, :name, { include_blank: 'Please select a role' }) %>
  </div>
  <br>
  <div class="field">
    <%= f.input :password, as: 'password', required: true %>
  </div>
  <div class="field">
    <%= f.input :password_confirmation, as: 'password', required: true %>
  </div>
  <div class="actions">
    <%= f.button :submit, class: 'btn btn-default' %>
  </div>

  <%= link_to 'Back', user_index_path %>


<% end %>
