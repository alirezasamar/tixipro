<h1>Listing Discounts</h1>

<%= link_to 'New Discount', new_event_discount_path(@event), class: 'btn btn-default' %>


<table class="table">
  <thead>
    <tr>
      <th>Ticket</th>
      <th>Discount percentage</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discounts.each do |discount| %>
      <tr>
        <td><%= Ticket.find(discount.ticket_id).ticket_type %></td>
        <td><%= discount.discount_percentage %>%</td>
        <td><%= discount.code %></td>
        <td><%= link_to 'Show', event_discount_path(@event, discount) %></td>
        <td><%= link_to 'Edit', edit_event_discount_path(@event, discount) %></td>
        <td><%= link_to 'Destroy', event_discount_path(@event, discount), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
