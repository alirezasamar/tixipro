<h1>Listing Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cover Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Genre</th>
      <th>Start</th>
      <th>End</th>
      <th>Add ticket</td>
      <th>Add discount</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to image_tag(event.cover_image.url(:small)), event.cover_image.url %></td>
        <td><%= event.name %></td>
        <td><%= event.description.html_safe %></td>
        <td><%= event.genre %></td>
        <td><%= event.start %></td>
        <td><%= event.end %></td>
        <td><%= link_to 'Buy tickets', event_tickets_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
