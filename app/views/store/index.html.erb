<section class="container margin_60">

        <div class="main_title">
            <h2><span>Upcoming</span> Events</h2>
            <!-- <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p> -->
        </div>

        <div  class="container margin_50">

            	<div class="row">
                	<aside class="col-lg-3 col-md-3">

        		<div class="box_style_cat">
        			<ul id="cat_nav">
        				<li><a href="#" id="active"><i class="icon_set_1_icon-51"></i>All genres <span>(141)</span></a></li>
        				<li><a href="#"><i class="icon_set_1_icon-3"></i>Dance <span>(20)</span></a></li>
        				<li><a href="#"><i class="icon_set_1_icon-4"></i>Litreture <span>(16)</span></a></li>
        				<li><a href="#"><i class="icon_set_1_icon-44"></i>Traditional <span>(12)</span></a></li>
        				<li><a href="#"><i class="icon_set_1_icon-37"></i>Music <span>(11)</span></a></li>
        				<li><a href="#"><i class="icon_set_1_icon-14"></i>Comedy <span>(20)</span></a></li>
        			</ul>
        		</div>

        		</aside><!--End aside -->
                    <div class="col-lg-9 col-md-9">

                    <div id="tools">

                   <div class="row">
                   	<div class="col-md-3 col-sm-3 col-xs-6">
                    	<div class="styled-select-filters">
        								<select name="sort_price" id="sort_price">
        									<option value="" selected>Sort by price</option>
        									<option value="lower">Lowest price</option>
        									<option value="higher">Highest price</option>
        								</select>
        				</div>
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-6">
                        <div class="styled-select-filters">
        								<select  name="sort_rating" id="sort_rating">
        									<option value="" selected>Sort by date</option>
        									<option value="lower">Lowest</option>
        									<option value="higher">Highest</option>
        								</select>
        				</div>
                        </div>

                    <div class="col-md-6 col-sm-6 hidden-xs text-right">
                    </div>

                	</div>
                    </div><!--/tools -->

                    <% @events.each do |event| %>

            			<div class="strip_all_tour_list wow fadeIn" data-wow-delay="0.1s">
                           <div class="row">
                        	<div class="col-lg-4 col-md-4 col-sm-4">
                            	<div class="img_list"><a href="event.html"><%= link_to image_tag(event.cover_image.url(:large)), event.cover_image.url  %>
                                <div class="short_info"><i class="icon_set_1_icon-4"></i><%= event.genre %></div></a>
                                </div>
                            </div>
                             <div class="clearfix visible-xs-block"></div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                            		<div class="tour_list_desc">
                                    <div class="rating"></div>
                            		<h3><strong><%= event.name %></strong></h3>
                                    <p><%= truncate event.description.html_safe, length: 320 %></p>
                                    <ul class="add_info">
                                    <li>
                                    <div class="tooltip_styled tooltip-effect-4">
                                    	<span class="tooltip-item"><i class="icon_set_1_icon-83"></i></span>
                                        	<div class="tooltip-content"><h4>Schedule</h4>
                                            <strong><%= event.start.strftime("%B %d") %><strong> <%= event.start.strftime("%H.%I %p") %> -
                                            <strong><%= event.end.strftime("%B %d") %><strong> <%= event.end.strftime("%H.%I %p") %>
                                        </div>
                                      </div>
                                   </li>
                                   <li>
                                    <div class="tooltip_styled tooltip-effect-4">
                                    	<span class="tooltip-item"><i class="icon_set_1_icon-41"></i></span>
                                        	<div class="tooltip-content"><h4>Venue</h4>
                                            	<%= event.venue %><br>
                                        </div>
                                      </div>
                                   </li>
                                    </ul>
                                    </div>
                            </div>
        					<div class="col-lg-2 col-md-2 col-sm-2">
                            	<div class="price_list"><div><sup>RM</sup><%= (event.tickets.pluck(:price).min).to_i %>*<small >*Per person</small>
                                <p><%= link_to 'Details', event_tickets_path(event), class: "btn_1" %></p>
                              <p><%= link_to '+ Cart', event_tickets_path(event), class: "btn_1 red" %></p>
                                </div>

                                </div>
                            </div>
                            </div>
        				</div><!--End strip -->
                <% end %>

                        <hr>

