<div class="container">

<%= link_to 'New Hall', new_hall_path, class: 'btn btn-default' %>
<%= link_to 'Events', events_path, class: 'btn btn-default' %>

<h1>Listing Halls</h1>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Total seat</th>
      <th>Seat view</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @halls.each do |hall| %>
      <tr>
        <td><%= hall.name %></td>
        <td><%= hall.description %></td>
        <td><%= hall.total_seat %></td>
        <td><%= link_to image_tag(hall.seat_view.url(:small)), hall.seat_view.url %></td>
        <td><%= link_to 'Show', hall %></td>
        <td><%= link_to 'Edit', edit_hall_path(hall) %></td>
        <td><%= link_to 'Destroy', hall, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
