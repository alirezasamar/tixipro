<%= simple_form_for(@hall) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :total_seat %>
    <%= f.input :seat_view %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
