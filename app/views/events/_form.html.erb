
<%= simple_form_for (@event), html: { multipart: true } do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id , readonly: true  %>
  </div>
  <div class="field">
    <%= f.input :cover_image, as: :file  %>
  </div>
  <div class="field">
    <%= f.input :name %>
  </div>
  <div class="field">
    <%= f.input :venue %>
  </div>
  <div class="field">
    <%= f.label :Hall, required: true %><br>
    <%= f.collection_select(:hall_id, Hall.all, :id, :name, prompt: 'Select Hall') %>
  </div>
  <br>
  <div class="field">
    <%= f.input :free_seating, as: :radio_buttons %>
  </div>
  <div class="field">
    <%= f.input :description, as: :wysihtml5 %>
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%= f.select :genre, Event::GENRES, required: true, autofocus: true %>
  </div>
  <div class="field">
    <br>
    <%= f.input :terms, as: :wysihtml5 %>
  </div>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.datetime_select :end %>
  </div>
  <br>
  <div class="actions">
    <%= f.button :submit, class: 'btn btn-default' %>
  </div>
<% end %>
