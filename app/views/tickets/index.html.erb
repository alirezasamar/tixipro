<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<%= link_to 'Back to event', events_path(@event), class: 'btn btn-default' %> 

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Price</th>
      <th>Price</th>
      <th>Free</th>
      <th>Quantity</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.ticket_type %></td>
        <td><%= ticket.price %></td>
        <td><%= ticket.price %></td>
        <td><%= ticket.free %></td>
        <td><%= ticket.quantity %></td>
        <td><%= @event.name %></td>
        <td><%= link_to 'Show', event_ticket_path(@event, ticket) %></td>
        <td><%= link_to 'Edit', edit_event_ticket_path(@event, ticket) %></td>
        <td><%= link_to 'Destroy', event_ticket_path(@event, ticket), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_event_ticket_path %>
