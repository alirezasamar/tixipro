    <div class="container margin_60">
	<div class="row">
		<div class="col-md-8">

			<div class="form_title">
				<h3><strong><i class="icon-tag-1"></i></strong>Tickets</h3>
			</div>
			<div class="step">
        <%= form_tag ticket_update_name_path, method: :put  do %>
	        <table class="table">
	          <thead>
	            <tr>
	              <th>Event</th>
	              <th>Ticket</th>
                <th>Seat No</th>
                <th>UID</th>
                <th>Name</th>
                <th colspan="1"></th>
	            </tr>
	          </thead>

	          <tbody>
              <% @my_tickets.each do |mt| %>
	            <tr>
                  <%= hidden_field_tag "mt_id[]", mt.id %>
	                <td><%= mt.ticket.event.name %></td>
	                <td><%= mt.ticket.ticket_type %></td>
                  <% if mt.seat_no > 0 %>
                    <td><%= mt.seat_no %>
                  <% else %>
                    <td> Free seating </td>
                  <% end %>
                  <td><%= mt.uid %></td>
                  <% if mt.name.blank? %>
                  	<td><%= text_field_tag "name[]" %></td>
        					<% else %>
        						<td><%= text_field_tag "name[]", mt.name, readonly: true %></td>
        					<% end %>
                  <td></td>
							</tr>

              <% end %>
              <%= submit_tag "Save Name", data: { confirm: "Are you sure? Please check the names ! This action is irreversible !" } , class: 'btn btn-default' %>
              &nbsp
              <%= link_to "Print Tickets", print_tickets_path(ticket_id: params[:ticket_id], format: :pdf), target: '_blank', class: 'btn btn-success' %>
	          </tbody>
	        </table>


        <% end %>
			</div><!--End step -->
		</div><!--End col-md-8 -->

	</div><!--End row -->
</div>

