<%= simple_form_for [@event,@ticket] do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h1><%= @event.name %></h1>

  <div class="field">
    <%= f.number_field :event_id, value: @event.id, style: 'display: none' %>
  </div>

  <div class="field">
    <%= f.input :ticket_type %>
  </div>
  <div class="field">
    <%= f.input :min_seat_no %>
  </div>
  <div class="field">
    <%= f.input :max_seat_no %>
  </div>
  <div class="field">
    <%= f.input :price %>
  </div>
  <div class="field">
    <%= f.input :free, as: :radio_buttons %>
  </div>
  <div class="field">
    <%= f.input :quantity %>
  </div>
  <div class="actions">
    <%= f.button :submit, class: 'btn btn-default' %>
  </div>
<% end %>
